pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven 3.8.1'  // Définir la version de Maven
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code source depuis le repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Compilation et construction de votre projet avec Maven
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' clean install"
                }
            }
        }

        stage('Test') {
            steps {
                // Exécution des tests unitaires
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' test"
                }
            }
        }

        stage('Security Scan') {
            steps {
                // Ajouter l'étape pour l'analyse de sécurité avec OWASP Dependency Check ou Snyk
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' org.owasp:dependency-check-maven:check"
                }
            }
        }

        stage('Deploy') {
            steps {
                // Déploiement de l'application (exemple pour Tomcat ou autre serveur)
                script {
                    sh "'${MAVEN_HOME}/bin/mvn' tomcat8:deploy"
                }
            }
        }
    }

    post {
        success {
            // Actions à exécuter si le build est réussi
            echo 'Build and deployment successful.'
        }
        failure {
            // Actions à exécuter en cas d'échec
            echo 'Build or deployment failed.'
        }
    }
}
